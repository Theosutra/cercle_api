# ============= DOCKER ENVIRONMENT =============
# Copiez ce fichier vers .env avant de lancer docker-compose

# ============= DATABASE =============
# URL de votre PostgreSQL existant
DATABASE_URL=postgresql://username:password@host:5432/social_network

# ============= JWT SECRETS =============
# IMPORTANT: Changez ces cl√©s en production!
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ============= SERVER =============
NODE_ENV=production
API_PORT=3000

# ============= SECURITY =============
BCRYPT_ROUNDS=12

# ============= CORS =============
FRONTEND_URL=http://localhost:5173,https://votre-frontend.com

# ============= RATE LIMITING =============
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# ============= LOGGING =============
LOG_LEVEL=info

# ============= FILE UPLOAD =============
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# ============= API =============
API_BASE_URL=http://localhost:3000

# ============= FEATURES =============
MAX_POST_LENGTH=280
MAX_MESSAGE_LENGTH=300
MAX_BIO_LENGTH=255
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100